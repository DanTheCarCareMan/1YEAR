  <script>
    // ------- PASSWORD LOGIC --------
    const CORRECT_PASSWORD = "11/23/25"; // <--- change this to whatever you want

    const passwordOverlay = document.getElementById("passwordOverlay");
    const baseContent = document.getElementById("baseContent");
    const passwordForm = document.getElementById("passwordForm");
    const passwordInput = document.getElementById("passwordInput");
    const showPasswordCheckbox = document.getElementById("showPassword");
    const pwError = document.getElementById("pwError");
    const pwCancelBtn = document.getElementById("pwCancelBtn");

    window.addEventListener("load", () => {
      passwordInput.focus();
    });

    showPasswordCheckbox.addEventListener("change", (e) => {
      passwordInput.type = e.target.checked ? "text" : "password";
    });

    pwCancelBtn.addEventListener("click", () => {
      passwordInput.value = "";
      pwError.classList.remove("visible");
      passwordInput.blur();
    });

    passwordForm.addEventListener("submit", (e) => {
      e.preventDefault();
      const entered = passwordInput.value.trim();

      if (entered === CORRECT_PASSWORD) {
        pwError.classList.remove("visible");
        baseContent.hidden = false;

        // Fade out overlay
        passwordOverlay.style.transition = "opacity 0.3s ease";
        passwordOverlay.style.opacity = "0";
        setTimeout(() => {
          passwordOverlay.style.display = "none";
        }, 300);
      } else {
        pwError.textContent = "what day is today??";
        pwError.classList.add("visible");
        passwordInput.value = "";
        passwordInput.focus();
      }
    });

    // ------- TABS / SECTIONS LOGIC --------
    const tabButtons = document.querySelectorAll(".tab-btn");
    const pageSections = document.querySelectorAll(".page-section");
    const scrapbookSection = document.getElementById("scrapbookSection");

    tabButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const targetId = btn.getAttribute("data-section");

        // activate tab button
        tabButtons.forEach((b) => b.classList.remove("active-tab"));
        btn.classList.add("active-tab");

        // show matching section
        pageSections.forEach((section) => {
          section.classList.toggle("active-section", section.id === targetId);
        });
      });
    });

    // ------- SLIDESHOW LOGIC --------
    const slides = Array.from(document.querySelectorAll(".slide"));
    const prevBtn = document.getElementById("prevBtn");
    const nextBtn = document.getElementById("nextBtn");
    const slideIndicator = document.getElementById("slideIndicator");
    const dotsContainer = document.getElementById("dotsContainer");

    let currentIndex = 0;

    // Create dots based on number of slides
    slides.forEach((_, index) => {
      const dot = document.createElement("button");
      dot.classList.add("dot");
      if (index === 0) dot.classList.add("active");
      dot.setAttribute("data-index", index);
      dotsContainer.appendChild(dot);
    });

    const dots = Array.from(document.querySelectorAll(".dot"));

    function updateSlides(newIndex) {
      if (newIndex < 0) {
        newIndex = slides.length - 1;
      } else if (newIndex >= slides.length) {
        newIndex = 0;
      }
      currentIndex = newIndex;

      slides.forEach((slide, i) => {
        slide.classList.toggle("active", i === currentIndex);
      });

      dots.forEach((dot, i) => {
        dot.classList.toggle("active", i === currentIndex);
      });

      slideIndicator.textContent = `Slide ${currentIndex + 1} of ${slides.length}`;
    }

    prevBtn.addEventListener("click", () => {
      updateSlides(currentIndex - 1);
    });

    nextBtn.addEventListener("click", () => {
      updateSlides(currentIndex + 1);
    });

    dots.forEach(dot => {
      dot.addEventListener("click", () => {
        const idx = parseInt(dot.getAttribute("data-index"), 10);
        updateSlides(idx);
      });
    });

    document.addEventListener("keydown", (e) => {
      // Only allow arrow navigation once the scrapbook is visible AND scrapbook tab is active
      if (baseContent.hidden) return;
      if (!scrapbookSection.classList.contains("active-section")) return;

      if (e.key === "ArrowLeft") {
        updateSlides(currentIndex - 1);
      } else if (e.key === "ArrowRight") {
        updateSlides(currentIndex + 1);
      }
    });

    // ------- QUIZ LOGIC --------
    const checkQuizBtn = document.getElementById("checkQuizBtn");
    const quizResult = document.getElementById("quizResult");

    checkQuizBtn.addEventListener("click", () => {
      const questions = Array.from(document.querySelectorAll(".quiz-question"));
      let correctCount = 0;
      let totalCount = 0;

      questions.forEach((q) => {
        const correct = q.getAttribute("data-correct");
        if (correct) {
          totalCount += 1;
          const name = "q" + totalCount;
          const selected = q.querySelector(`input[name="${name}"]:checked`);
          if (selected && selected.value === correct) {
            correctCount += 1;
          }
        }
      });

      quizResult.innerHTML = `
        <span>${correctCount} / ${totalCount}</span>
        &nbsp;You know us pretty well ü§´
      `;
    });
  </script>
